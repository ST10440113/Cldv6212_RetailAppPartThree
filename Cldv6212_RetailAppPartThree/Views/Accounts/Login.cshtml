@model Cldv6212_RetailAppPartThree.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible">
        @TempData["Error"]
        <button class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

    </div>
}

<div class="d-flex justify-content-center ">
    <div class="card  text-bg-dark box-shadow border-black" style="width:450px; height:560px;">
        <div class="card-body">
            <h2 class="text-center mb-4">Login</h2>

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="RememberMe" />
                    <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
                </div>
                <br />
                <br />
                <div class="mb-3">
                    <label class="form-label">Login As</label><br />
                    <input type="radio" asp-for="Role" value="Admin" />
                    <label for="admin" class="me-3">Admin</label>

                    <input type="radio" asp-for="Role" value="Customer" />
                    <label for="customer">Customer</label>

                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>




                <div class="text-center">
                    <button class="btn btn-primary " type="submit">Sign in</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
